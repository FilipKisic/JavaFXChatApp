<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="675.0"
          prefWidth="1200.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/8.0.202"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.algebra.controllers.Controller">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="595.0" minWidth="10.0" prefWidth="400.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="834.0" minWidth="10.0" prefWidth="834.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <VBox id="vBoxMenu" prefHeight="200.0" prefWidth="383.0">
        <BorderPane fx:id="bpMenu" prefHeight="675.0" prefWidth="383.0">
            <bottom>
                <HBox fx:id="hboxBottom" alignment="CENTER" prefHeight="105.0" prefWidth="383.0"
                      BorderPane.alignment="CENTER">
                    <ToggleButton fx:id="tglbtnContacts" mnemonicParsing="false" onAction="#tglbtnContactsIsToggled"
                                  prefHeight="60.0" prefWidth="60.0" styleClass="chatButton">
                        <HBox.margin>
                            <Insets/>
                        </HBox.margin>
                    </ToggleButton>
                    <ToggleButton fx:id="tglbtnSettings" mnemonicParsing="false" onAction="#tglbtnSettingsIsToggled"
                                  prefHeight="60.0" prefWidth="60.0" styleClass="settingsButton">
                        <HBox.margin>
                            <Insets/>
                        </HBox.margin>
                    </ToggleButton>
                </HBox>
            </bottom>
        </BorderPane>
    </VBox>
    <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1">
        <HBox alignment="CENTER_LEFT" prefHeight="102.0" prefWidth="817.0">
            <ImageView fx:id="ivContactImage" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                <HBox.margin>
                    <Insets left="25.0"/>
                </HBox.margin>
                <Image url="@../images/default-profile.png"/>
            </ImageView>
            <Label fx:id="lbContactName" text="Name Surname">
                <font>
                    <Font name="System Bold" size="36.0"/>
                </font>
                <HBox.margin>
                    <Insets left="25.0"/>
                </HBox.margin>
            </Label>
        </HBox>
        <ScrollPane fx:id="scrlpChatScrollPane" fitToWidth="true" prefHeight="475.0" prefWidth="817.0">
            <VBox fx:id="vbChat" alignment="TOP_RIGHT" prefHeight="475.0" prefWidth="817.0" spacing="10.0"
                  style="-fx-background-color: #E0E0E0;">
                <padding>
                    <Insets left="15.0" right="15.0" top="10.0"/>
                </padding>
            </VBox>
        </ScrollPane>
        <HBox alignment="CENTER_LEFT" prefHeight="105.0" prefWidth="200.0">
            <Button id="btnUploadImage" fx:id="btnUploadImage" mnemonicParsing="false" onAction="#btnUploadImageClicked"
                    prefHeight="50.0" prefWidth="50.0">
                <HBox.margin>
                    <Insets left="15.0"/>
                </HBox.margin>
            </Button>
            <TextField fx:id="tfTextContent" onAction="#sendMessage" prefHeight="50.0" prefWidth="660.0"
                       promptText="Write here...">
                <font>
                    <Font name="Segoe UI" size="18.0"/>
                </font>
                <HBox.margin>
                    <Insets left="15.0"/>
                </HBox.margin>
            </TextField>
            <Button fx:id="btnSend" mnemonicParsing="false" onAction="#btnSendClicked" prefHeight="48.0"
                    prefWidth="48.0">
                <HBox.margin>
                    <Insets left="15.0"/>
                </HBox.margin>
            </Button>
        </HBox>
    </VBox>
</GridPane>
